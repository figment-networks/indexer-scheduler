# ------------------------------------------------------------------------------
# Builder Image
# ------------------------------------------------------------------------------
FROM golang:1.14 AS build

WORKDIR /go/src/github.com/figment-networks/indexer-scheduler/

COPY ./go.mod .
COPY ./go.sum .

RUN go mod download

COPY .git .git
COPY ./Makefile ./Makefile
COPY ./cmd/scheduler-migration ./cmd/scheduler-migration


ENV CGO_ENABLED=0
ENV GOARCH=amd64
ENV GOOS=linux

RUN \
  GO_VERSION=$(go version | awk {'print $3'}) \
  GIT_COMMIT=$(git rev-parse HEAD) \
  make build-migration

# ------------------------------------------------------------------------------
# Target Image
# ------------------------------------------------------------------------------
FROM alpine:3.10 AS release

WORKDIR /app/migration

COPY --from=build /go/src/github.com/figment-networks/indexer-scheduler/migration /app/migration/migration
COPY --from=build /go/src/github.com/figment-networks/indexer-scheduler/cmd/scheduler-migration/migrations/ /app/migration/migrations/
RUN chmod a+x ./migration
CMD ["./migration"]
